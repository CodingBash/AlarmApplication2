<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:baselineAligned="false">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/scrollContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/set_alarm"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:text="Set Alarm"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

            <Button
                android:id="@+id/cancel_alarm"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Cancel Alarm"
                tools:gravity="center_vertical"
                tools:ignore="HardcodedText,UnusedAttribute"
                tools:textAlignment="center"
                android:elevation="0dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Enter Alarm Message"
                    android:ems="10"
                    android:id="@+id/userMessage"
                    android:contextClickable="true"
                    tools:textAlignment="center"
                    android:textIsSelectable="true"
                    android:textAllCaps="false"
                    tools:ignore="HardcodedText,UnusedAttribute"
                    android:layout_weight="0.38"
                    android:selectAllOnFocus="true" />

                <CheckBox
                    android:text="Recursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recursiveCheckBox"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/datePicker2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|time"
                android:ems="10"
                android:id="@+id/timeZone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>